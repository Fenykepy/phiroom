  "license": "GPLv3",
  "main": "js/app.js",
  "dependencies": {
    "flux": "^2.0.3",
    "react": "^0.13.3"
  },
  "devDependencies": {
    "browserify": "^10.2.6",
    "envify": "^3.4.0",
    "less": "^2.5.1",
    "reactify": "^1.1.1",
    "uglify-js": "^2.4.23",
    "watchify": "^3.2.3"
  },
  "scripts": {
    "start": "watchify -o statics/js/bundle.js -v -d statics/js/app.js",
